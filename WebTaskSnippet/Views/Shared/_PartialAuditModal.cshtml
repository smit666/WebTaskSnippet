@model WebTaskSnippet.Models.Student

<input type="button" data-toggle="modal" data-target="#exampleModal" value="save" class="btn btn-default" />

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Audit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label for="exampleInputEmail1">Change Reason</label>
                    @*<input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter description">*@
                    @Html.TextBoxFor(m => m.ChangeReason, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Change Description</label>
                    @*<input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter description">*@
                    @Html.TextBoxFor(m => m.ChangeDescription, new { @class = "form-control" })

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                @*<button type="button" class="btn btn-primary">Save changes</button>*@
                @* @Html.Action("PartialTest", "Home", new { id = ViewData["btnId"] })*@
                @* @Html.ActionLink("Submit", "PartialTest", "Home", new { @class = "btn btn-primary", id = ViewData["btnId"] })*@
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>